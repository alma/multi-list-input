{
  "name": "alma-multi-list-input",
  "version": "1.0.0",
  "description": "Alma multi list input",
  "scripts": {
    "build": "npm run cleanup && npm run copy-assets && elm make src/Main.elm --output=build/app.js --optimize",
    "copy-assets": "rimraf build && mkdir build && cp -r public/* build",
    "cleanup": "rimraf elm-stuff/",
    "debug": "elm-live src/Main.elm --port=3000 --dir=public/ -- --output=public/app.js --debug",
    "deploy": "npm run build && gh-pages --dist build/",
    "live": "elm-live src/Main.elm --port=3000 --dir=public/ -- --output=public/app.js",
    "test": "elm-test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alma/multi-list-input.git"
  },
  "bugs": {
    "url": "https://github.com/alma/multi-list-input/issues"
  },
  "homepage": "https://github.com/alma/multi-list-input#readme",
  "author": "Alma",
  "license": "ISC",
  "devDependencies": {
    "elm": "^0.19.1-3",
    "elm-format": "^0.8.3",
    "elm-live": "^4.0.2",
    "elm-test": "^0.19.1-revision2",
    "gh-pages": "^2.1.1",
    "rimraf": "^3.0.0"
  }
}
